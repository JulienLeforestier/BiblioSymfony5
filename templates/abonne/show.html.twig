{% extends 'base.html.twig' %}

{% block title %}Abonné
{% endblock %}

{% block body %}
	<h1>Abonné n°{{ abonne.id }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ abonne.id }}</td>
			</tr>
			<tr>
				<th>Pseudo</th>
				<td>{{ abonne.pseudo }}</td>
			</tr>
			<tr>
				<th>Rôles</th>
				<td>{{ abonne.roles ? abonne.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ abonne.nom }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ abonne.prenom }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('abonne_index') }}" class="btn btn-primary">Retour</a>
	<br><br>
	<a href="{{ path('abonne_edit', {'id': abonne.id}) }}" class="btn btn-primary">Editer</a>
	<br><br>
	{{ include('abonne/_delete_form.html.twig') }}
{% endblock %}
