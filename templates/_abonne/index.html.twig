{% extends 'base.html.twig' %}

{% block title %}Abonnés
{% endblock %}

{% block body %}
	<table class="table table-bordered table-striped">
		<thead class="thead-dark">
			<th>ID</th>
			<th>Pseudo</th>
			<th>Nom</th>
			<th>Prénom</th>
			<th colspan="3">Actions</th>
		</thead>
		<tbody>
			{% for abonne in liste_abonnes %}
				<tr>
					<td>{{ abonne.id }}</td>
					<td>{{ abonne.pseudo }}</td>
					<td>{{ abonne.nom }}</td>
					<td>{{ abonne.prenom }}</td>
					<td>
						<a href="{{ path("abonne_afficher", {id: abonne.id}) }}">
							<i class="fas fa-eye"></i>
						</a>
					</td>
					<td>
						<a href="{{ path("abonne_modifier", {id: abonne.id}) }}">
							<i class="fas fa-edit"></i>
						</a>
					</td>
					<td>
						<a href="{{ path("abonne_supprimer", {id: abonne.id}) }}">
							<i class="fas fa-trash-alt"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
